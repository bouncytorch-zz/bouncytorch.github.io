@-webkit-keyframes slide {
    from {
        background-position: 0 0;
    }

    to {
        background-position: -888px 0;
    }
}

@keyframes slide {
    from {
        background-position: 0 0;
    }

    to {
        background-position: -888px 0;
    }
}

* {
    font-family: Segoe UI;

    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    font-size: 18px;
}

header {
    position: relative;

    height: 737px;

    background: url(../images/header-bg.jpg);
    background-size: cover;
}

nav {
    position: absolute;
    top: 11px;

    display: flex;
}

h1 {
    font-size: 64px;
    font-weight: 900;
    font-style: normal;
    line-height: 84.56%;

    color: #ffffff;

    mix-blend-mode: difference;
}

h2 {
    font-size: 18px;
    font-weight: 600;
    font-style: normal;
    line-height: 24px;

    color: #fff;

    mix-blend-mode: difference;
}

h3 {
    font-size: 72px;
    font-weight: 900;
    font-style: normal;
    line-height: 97px;

    color: #000;
}

h4 {
    font-size: 36px;
    font-weight: 900;
    font-style: normal;
    line-height: 49px;

    color: #fff;
}

p {
    font-size: 18px;
    font-weight: 600;
    font-style: normal;
    line-height: 24px;

    text-align: right;

    opacity: 0.6;
    color: #000;
}

.header-contents h1 {
    width: 674px;
    margin-bottom: 15px;
}

.header-contents h2 {
    width: 443px;
}

.global {
    width: 1218px;
    margin: auto;
}

.header-contents {
    display: flex;
    flex-direction: column;

    width: 1062px;
    height: 737px;
    margin: auto;

    justify-content: center;
}

.nav-logo {
    font-family: Segoe UI;
    font-size: 48px;
    font-weight: bold;
    font-style: normal;
    line-height: 64px;

    width: 78px;
    height: 64px;

    -webkit-user-select: none;
       -moz-user-select: none;
        -ms-user-select: none;
            user-select: none;
    text-align: center;
    letter-spacing: -0.18em;

    color: #fff;

    mix-blend-mode: difference;
}

.section1 {
    display: flex;

    height: 737px;

    align-items: center;
    justify-content: space-between;
}

.section1-left {
    display: flex;
    flex-direction: column;

    align-items: flex-end;
}

.section1-right {
    display: flex;
    flex-direction: column;

    align-items: center;
}

.section1-left p {
    width: 443px;
    height: 96px;
}

.section1-right p {
    margin-bottom: 85px;
}

.stl-button {
    font-size: 18px;
    font-weight: 300;
    font-style: normal;
    line-height: 24px;

    display: flex;

    box-sizing: border-box;
    width: 217px;
    height: 60px;

    cursor: pointer;
    -webkit-user-select: none;
       -moz-user-select: none;
        -ms-user-select: none;
            user-select: none;
    transition: all;
    transition-timing-function: ease-out;
    transition-duration: 0.3s;

    color: rgba(0, 0, 0);
    border: 0.5px solid rgba(0, 0, 0);
    border-radius: 30px;

    align-items: center;
    justify-content: center;
}

.stl-button:hover {
    color: rgba(255, 255, 255);
    background: rgba(0, 0, 0);
    box-shadow: 0 1px 2px #000;
}

.stl-button:focused {
    color: rgba(255, 255, 255);
}

.stl-button:active {
    border: 0.5px solid rgb(117.65, 114.75, 140.25);
    background: rgb(117.65, 114.75, 140.25);
}

.replace {
    position: relative;
}

.replace-text {
    position: absolute;
    z-index: 2;

    width: 100%;
    height: 100%;

    background: url(../images/text.png) center center no-repeat;
}

.replace-bg {
    position: relative;
    z-index: 1;

    width: 100%;
    height: 737px;

    -webkit-animation: slide 5s linear infinite;
            animation: slide 5s linear infinite;

    background: grey url(../images/section1-background.png) repeat-x 0 0;

    -webkit-filter: blur(70px);

            filter: blur(70px);
}

.section2 {
    width: 100%;
    height: 227px;
    padding-top: 65px;

    background: #000;
}

.section2-contents {
    display: flex;
    justify-content: space-between;
}

.section2-left h4 {
    margin-right: 23px;
}

.section2-left p {
    font-size: 18px;
    font-weight: 600;
    font-style: normal;
    line-height: 24px;

    width: 443px;
    height: 72px;

    text-align: right;

    opacity: 0.6;
    color: #fff;
}

.section2-left {
    display: flex;
}